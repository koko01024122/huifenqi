<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgetpsd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.cxhll.huifenq.Activitys.ForgetpsdActivity">

    <include
        android:id="@+id/fg_psdbar"
        layout="@layout/actionbar" />

    <RelativeLayout
        android:id="@+id/fg_psd_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fg_psdbar"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fg_phonenum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:hint="请输入您的手机号"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/yzm_text"

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fg_phonenum"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:inputType="number"
            android:text=" 验证码 ："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/fg_yzm_input"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fg_phonenum"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/yzm_text" />

        <Button
            android:id="@+id/get_Idencode"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fg_phonenum"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/fg_yzm_input"
            android:background="#ea4130"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fg_psd_m"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fg_psd_one"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginTop="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fg_psd_two"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入新密码"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/fg_psd_over"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="#ea4130"
            android:text="完  成"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
