<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp">
<ImageView
    android:id="@+id/shipper_img"
    android:src="@drawable/sf"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_width="60dp"
    android:layout_height="60dp" />
    <TextView
        android:id="@+id/shipper_name"
        android:layout_toRightOf="@+id/shipper_img"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="顺丰快递"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_below="@+id/shipper_name"
        android:id="@+id/shipper_word"
        android:layout_toRightOf="@+id/shipper_img"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="快速预约寄件，一小时上门收件"
        android:gravity="center"
        android:textSize="15sp"

       />
</RelativeLayout>