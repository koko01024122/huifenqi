<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messaty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff"
    tools:context="com.example.cxhll.huifenq.Activitys.MessAty">
    <include layout="@layout/actionbar"
        android:id="@+id/supp_bar"/>
<ScrollView
    android:layout_below="@+id/supp_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/orderinfo_button"
        android:layout_below="@+id/RL_personinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <android.support.v7.widget.CardView
            android:id="@+id/info_cd"
           app:contentPaddingLeft="5dp"

            app:cardBackgroundColor="#ea4130"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="     订单详情"
            android:gravity="center|left"
            android:background="#ea4130"
            android:textColor="#fff"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:id="@+id/rl_order_info"
            android:layout_below="@+id/info_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/order_info"
               ></include>
        </RelativeLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/meee_infosrl"
        android:layout_below="@+id/orderinfo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/supp_imgtext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"
                android:text="补充图片"/>

<android.support.v7.widget.CardView
    android:layout_below="@+id/supp_imgtext"
    android:id="@+id/update_bill"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"

    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:clickable="true"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
   >



            <RelativeLayout
                android:layout_below="@+id/liebiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >


                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/bill_pic"
                    android:layout_width="320dp"

                    android:layout_centerHorizontal="true"
                    android:layout_height="100dp"
                    >
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/addimg"
                        android:background="#fff"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img2"
                        android:layout_toRightOf="@+id/img1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="100dp"
                        android:src="@drawable/addimg"
                        android:layout_height="100dp"
                        android:background="#fff"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/addimg"
                        android:background="#fff"
                       />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bill_pic2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/bill_pic"
                    android:layout_width="320dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:src="@drawable/addimg"
                        android:background="#fff"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img5"
                        android:layout_toRightOf="@+id/img1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="100dp"
                        android:src="@drawable/addimg"

                        android:layout_height="100dp"
                        android:background="#fff"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img6"

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/addimg"
                        android:background="#fff"
                        />
                </LinearLayout>
            </RelativeLayout>
</android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/supp_people"
                android:layout_below="@+id/update_bill"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:text="补充紧急联系人"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@+id/supp_people"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/updata_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:clickable="true"

                android:layout_height="match_parent">
            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="10"
                        android:id="@+id/con1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="关系"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="10"
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="姓名"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="8"
                        android:id="@+id/phone1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:inputType="phone"
                            android:layout_height="wrap_content"
                            android:hint="电话"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="10"
                        android:id="@+id/con2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="关系"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="10"
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="姓名"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="8"
                        android:id="@+id/phone2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:inputType="phone"
                            android:layout_height="wrap_content"
                            android:hint="电话"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="10"
                        android:id="@+id/con3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="关系"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="10"
                        android:id="@+id/name3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="姓名"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="8"
                        android:id="@+id/phone3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:inputType="phone"
                            android:layout_height="wrap_content"
                            android:hint="电话"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>




            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/rl_bill_list"
                android:layout_below="@+id/updata_content"
                android:layout_height="match_parent">

            </android.support.v7.widget.CardView>




        </RelativeLayout>
    </RelativeLayout>
<android.support.v7.widget.CardView
    android:id="@+id/RL_personinfo"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="80dp"

        android:layout_alignParentStart="true">


    <ImageView
        android:id="@+id/iv_deta_stage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_toRightOf="@+id/iv_deta_stage"
        android:id="@+id/tv_deta_name"
        android:layout_width="100dp"
        android:layout_height="40dp"

        android:text="李二狗"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="28sp"/>
<Button
    android:id="@+id/call"
    android:layout_below="@+id/tv_deta_name"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:gravity="top"
android:layout_marginRight="10dp"
    android:background="@drawable/call"
    android:textSize="8sp"
    android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_deta_phonenum"
        android:layout_marginLeft="5dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="18186****89"
        android:textSize="16sp"
        android:gravity="center|left"
        android:layout_below="@+id/tv_deta_name"
        android:layout_alignStart="@+id/tv_deta_name"/>


</RelativeLayout>
</android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/remark_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/meee_infosrl"
        android:gravity="center|left"
        android:text="备注信息"/>
    <EditText
        android:id="@+id/remarks_et"
        android:hint="您可以在此填写备注信息"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_below="@+id/remark_text"
        android:layout_height="130dp" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/supp_send"
        android:layout_height="50dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:clickable="true"
        android:layout_below="@+id/remarks_et"
        app:cardBackgroundColor="#ea4130">
        <TextView

            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:text="完  成"
            android:textSize="20sp"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>
</RelativeLayout>
