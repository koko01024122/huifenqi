<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cxhll.huifenq.Activitys.SettingActivity">

<include layout="@layout/actionbar"
    android:id="@+id/setting_bar"/>
    <LinearLayout
        android:divider="@drawable/line"
        android:showDividers="beginning|end|middle"
        android:layout_below="@+id/setting_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/change_psd"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:text="修改密码"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:text="消息通知"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/about_hui"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:text="关于惠分期"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="45dp">
           <TextView
               android:id="@+id/hepleing"
               android:layout_weight="1"
               android:gravity="center|left"
               android:layout_marginLeft="20dp"
               android:text="帮助"
               android:textColor="#000"
               android:textSize="16sp"
               android:layout_width="match_parent"
               android:layout_height="45dp" />

       </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/loginout"
        android:layout_marginBottom="20dp"
   android:background="#ea4130"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="退出当前账号"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>
