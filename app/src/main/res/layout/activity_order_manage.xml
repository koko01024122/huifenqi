<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cxhll.huifenq.Activitys.OrderManageActivity">
    <include layout="@layout/actionbar"
        android:id="@+id/orders_toolbar"/>
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/order_tab"
        app:pstsDividerColor="#f44336"
        app:pstsIndicatorColor="@color/colorAccent"
        app:pstsShouldExpand="true"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="center"

        android:layout_width="match_parent"
        android:layout_height="48dp"
        />
    <android.support.v4.view.ViewPager

        android:id="@+id/order_viewpager"
        android:overScrollMode="never"
        android:layout_below="@+id/orders_toolbar"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
