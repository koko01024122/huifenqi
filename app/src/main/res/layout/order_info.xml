<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rorderinfo"

    android:background="#fff">
    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="订 单 号 ： "/>
    <TextView
        android:id="@+id/order_num"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/tv_order_num"
        android:text="2013030355225465525202"/>
    <TextView
        android:layout_below="@+id/order_num"
        android:id="@+id/tv_order_time"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="订单时间： "/>
    <TextView
        android:layout_below="@+id/order_num"
        android:id="@+id/order_time"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/tv_order_num"
        android:text="2013030355225465525202"/>

    <TextView
        android:id="@+id/order_cusoname"
        android:layout_below="@+id/order_time"
        android:layout_toRightOf="@+id/order_cusoname_text"
        android:layout_width="100dp"
        android:gravity="center|left"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tv_trade_price"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_trade_name"
        android:gravity="center"
        android:text="商品价格："/>
    <TextView
        android:id="@+id/trade_price"
        android:layout_below="@+id/tv_trade_name"
        android:layout_toRightOf="@+id/tv_trade_price"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="6825.00"
        android:gravity="center|left"
        android:textColor="#ea4130"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_trade_receiver"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/receiver"
        android:layout_below="@+id/tv_stag_info"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_stag_info"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"

        android:text="@string/stag_info"
        android:layout_below="@+id/tv_trade_price"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/stag_info"
        android:layout_below="@+id/tv_trade_price"
        android:layout_toRightOf="@+id/tv_stag_info"
        android:layout_width="300dp"
        android:text="200.2*24"
        android:gravity="center|left"
        android:textColor="#ea4130"
        android:textStyle="bold"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/receiver"
        android:layout_toRightOf="@+id/tv_trade_receiver"
        android:layout_below="@+id/stag_info"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center|left"
        android:text="王翠花"/>
    <TextView
        android:id="@+id/tv_receiver_phonenum"
        android:layout_below="@+id/tv_trade_receiver"
        android:layout_width="100dp"
        android:gravity="center"
        android:text="收货人电话:"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/receiver_phonenum"
        android:layout_toRightOf="@+id/tv_receiver_phonenum"
        android:layout_below="@+id/receiver"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="18186143489"
        android:gravity="left|center"/>
    <TextView
        android:layout_below="@+id/receiver_phonenum"
        android:id="@+id/tv_address"

        android:layout_width="100dp"
        android:gravity="center"
        android:text="收货人地址:"
        android:layout_height="30dp"/>
    <TextView
        android:layout_below="@+id/receiver_phonenum"
        android:id="@+id/address"
        android:layout_toRightOf="@+id/tv_receiver_phonenum"

        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="18186143489"
        android:gravity="left|center"/>
    <RelativeLayout

android:layout_below="@+id/tv_address"
        android:id="@+id/stage_rls"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    <TextView

        android:id="@+id/tv_order_stage"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:text="订单状态："/>
    <TextView
        android:id="@+id/order_stage_green"

        android:layout_toRightOf="@+id/tv_order_stage"
        android:gravity="center|left"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textColor="#0e9f04"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/order_stage_red"

        android:layout_toRightOf="@+id/tv_order_stage"
        android:gravity="center|left"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="未通过"
        android:textColor="#ea4130"
        android:visibility="gone"
        android:textStyle="bold"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/tv_refu_reason"
        android:layout_below="@+id/stage_rls"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="补充资料："
        android:gravity="center"
        />

    <TextView
        android:layout_toRightOf="@+id/tv_refu_reason"
        android:id="@+id/refu_reason"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:scrollHorizontally="true"
        android:text="请提供父母联系电话以及拍拍贷账单"
        android:gravity="center|left"
        android:layout_below="@+id/stage_rls"
       />
    <TextView
        android:layout_below="@+id/order_cusoname_text"
        android:id="@+id/tv_trade_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="商品名称："
        android:gravity="center"

       />

    <TextView
        android:layout_toRightOf="@+id/tv_trade_name"
        android:id="@+id/trade_name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center|left"
        android:text="戴尔游匣15P-6748"
        android:layout_below="@+id/order_cusoname_text"
/>

    <TextView
        android:id="@+id/order_cusoname_text"
        android:layout_width="100dp"
        android:text="客户姓名："
        android:gravity="center"
        android:layout_height="30dp"
        android:layout_below="@+id/order_time"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>