<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_express"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.cxhll.huifenq.Activitys.ExpressActivity">
<include layout="@layout/actionbar"
    android:id="@+id/express_bar"/>
    <LinearLayout
        android:id="@+id/function"
        android:layout_below="@+id/express_bar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_height="110dp">
<RelativeLayout
    android:layout_weight="1"
    android:id="@+id/select_express"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/select_express_img"
    android:layout_width="80dp"
    android:layout_height="60dp"
    android:src="@drawable/select_expressimg"
    />
    <TextView
        android:layout_below="@+id/select_express_img"
        android:layout_width="80dp"
        android:textSize="20sp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="查快递"/>
</RelativeLayout>
        <RelativeLayout
            android:id="@+id/send_express"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/send_express_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/send_express"
                />
            <TextView
                android:layout_below="@+id/send_express_img"
                android:layout_width="80dp"
                android:textSize="20sp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="寄快递"/>
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/express_list"
        android:layout_below="@+id/function"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <RelativeLayout

        android:id="@+id/express_nothing"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/express_nothing_img"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:gravity="center"
            android:src="@drawable/express_info_img"/>
        <TextView
            android:layout_toRightOf="@+id/express_nothing_img"
            android:id="@+id/express_text"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="没有物流信息"
            android:textSize="30sp"
            android:layout_gravity="center"

            />
    </RelativeLayout>
</RelativeLayout>
