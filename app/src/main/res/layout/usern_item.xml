<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#dadada"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


<TextView
    android:layout_marginTop="10dp"
    android:id="@+id/usi_h1"
    android:background="#fff"
    android:gravity="center|left"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:textColor="#000000"
    android:layout_height="40dp"
    android:textSize="18sp"
    android:text="妙龄少女睡觉未拉窗帘竟惨遭毒手，究竟是什么人如此丧心病狂"/>
    <TextView
        android:id="@+id/usi_date"
        android:text="11月9日"
        android:gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/usi_h1"
        android:layout_width="70dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/usi_img"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/usi_date"
        android:layout_width="match_parent"
        android:layout_height="160dp"
       />
        <TextView
            android:id="@+id/usi_tutor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/usi_img"
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:text="这个地方是前言导读，这个地方是前言导读"
            android:layout_height="40dp"
            />
        <TextView
            android:layout_below="@+id/usi_tutor"
            android:layout_width="100dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="查看全文"
            android:gravity="center|left"
            android:layout_height="30dp" />
    </RelativeLayout>
    </RelativeLayout>
