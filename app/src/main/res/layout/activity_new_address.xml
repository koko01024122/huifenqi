<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cxhll.huifenq.Activitys.NewAddressActivity">
<include layout="@layout/actionbar"
    android:id="@+id/ana_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:divider="@drawable/line"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="50dp"
    >
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="收/发货人"/>
    <EditText
        android:id="@+id/new_address_name"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="联系电话"/>
        <EditText
            android:id="@+id/new_address_tel"
            android:layout_weight="4"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="所在地区"/>
        <TextView
            android:id="@+id/address_pca"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
        android:gravity="center|left"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <EditText
            android:id="@+id/new_address_address"
            android:hint="详细地址"
            android:gravity="top"
            android:textSize="15sp"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_address_set_default"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="9"
            android:layout_width="0dp"
            android:gravity="center|left"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:text="设置为默认地址"/>
        <CheckBox
            android:id="@+id/new_checkbox"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/new_address_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimary"
        android:text="完成"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"/>
</LinearLayout>
